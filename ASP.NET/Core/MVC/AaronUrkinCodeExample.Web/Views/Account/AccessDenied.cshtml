        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>@ViewData["Title"]</h1>
                <h2 class="section-heading">@Translate["You do not have access to this resource."]</h2>
                <a asp-action="Index" asp-controller="Home" class="btn btn-xl">@Translate["To Home Page"]</a>
            </div>
        </div>
    </div>
</section>
