@model LoginViewModel
@{
    Layout = "_LayoutIntro";
    ViewData["Title"] = Translate["Log in"];
}

<section id="contact" class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@ViewData["Title"]</h2>
                <h3 class="form-subheading">@Translate["Use a local account to log in."]</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <form asp-route-to="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="sr-only"></label>
                        <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email) *" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only"></label>
                        <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password) *" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-xl">@Translate["Send"]</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">@Translate["Forgot your password?"]</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-to="@ViewData["ReturnUrl"]">@Translate["Register as a new user?"]</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
