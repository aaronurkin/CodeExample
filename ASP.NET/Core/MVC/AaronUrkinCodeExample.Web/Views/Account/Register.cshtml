@model RegisterViewModel
@{
    Layout = "_LayoutIntro";
    ViewData["Title"] = Translate["Register"];
}

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@ViewData["Title"]</h2>
                <h3 class="form-subheading">@Translate["You can use a fake email."]</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-route-to="@ViewData["ReturnUrl"]" method="post">
                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger col-lg-10 col-lg-offset-2"></div>
                        <div class="col-md-4 col-lg-offset-2">
                            <div class="form-group">
                                <label asp-for="FirstName" class="sr-only"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.FirstName) *" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="sr-only"></label>
                                <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.LastName)" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="sr-only"></label>
                                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email) *" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="sr-only"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(m => m.PhoneNumber) *" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Country" class="sr-only"></label>
                                <input asp-for="Country" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Country) *" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="sr-only"></label>
                                <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password) *" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="sr-only"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword) *" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-xl">@Translate["Send"]</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
