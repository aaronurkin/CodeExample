@{
    ViewData["Title"] = Translate["Confirm email"];
}

<section id="confirm-email">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>@ViewData["Title"]</h1>
                <h2>@Translate["Thank you for confirming your email."]</h2>
                <a asp-action="Login" asp-route-to="@ViewData["ReturnUrl"]" class="btn btn-xl">@Translate["To Login Page"]</a>
            </div>
        </div>
    </div>
</section>
