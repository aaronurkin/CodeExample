@model LoginViewModel
@{
    Layout = "_LayoutIntro";
    ViewData["Title"] = Translate["Forgot your password?"];
}

<section id="contact" class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@ViewData["Title"]</h2>
                <h3 class="form-subheading">@Translate["Get password reset instructions to your email"]</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="sr-only"></label>
                        <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email) *" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-xl">@Translate["Send"]</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
