@{
    ViewData["Title"] = Translate["Reset password confirmation"];
}

<section id="password-reset-confirmed">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>@ViewData["Title"]</h1>
                <h2>@Translate["Your password has been reset."]</h2>
                <a asp-action="Login" class="btn btn-xl">@Translate["To Login Page"]</a>
            </div>
        </div>
    </div>
</section>
