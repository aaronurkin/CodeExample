@{
    Layout = "_LayoutIntro";
    ViewData["Title"] = Translate["Home Page"];
}

<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">@Translate["Welcome To Home Page!"]</div>
            <div class="intro-heading">@Translate["Aaron's Skills"]</div>
            <a href="#services" class="page-scroll btn btn-xl">@Translate["Show Me The Skills"]</a>
        </div>
    </div>
</header>

<!-- Services Section -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Translate["Skills"]</h2>
                <h3 class="section-subheading text-muted">@Translate["I'm working as ASP.NET web developer for 5 years"]</h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-database fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">@Translate["SQL"]</h4>
                <p class="text-muted">@Translate["My greatest experience is in SQL. I have graduated from <a href=\"{0}\" target=\"blank\">Oracle course</a>.<br />Furthermore, now I'm learning MongoDB.", "https://www.youracclaim.com/badges/2716f748-8b6c-4baf-8803-ed6e84e3be57/linked_in_profile"]</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-server fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">@Translate["Backend"]</h4>
                <p class="text-muted">@Translate["Also I'm experienced in ASP.NET (C#). I developed numerous projects using ASP.NET MVC 4-5 and EF, and now I'm working using ASP.NET Core 2.0 (and experienced in 1.1) and EF Core (of course Code First). Also I'm learning nodeJS for pleasure."]</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-jsfiddle fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">@Translate["Frontend"]</h4>
                <p class="text-muted">@Translate["Although I prefer server-side, I do have experience in developing UI using HTML5, CSS, jQuery, jQueryUI and Bootstrap. Templating with Handlebars."]</p>
            </div>
        </div>
        <div class="row clients">
            <div class="col-md-2">
                <img src="~/images/sql.png" class="img-responsive img-centered" alt="SQL Server & SSMS">
            </div>
            <div class="col-md-2">
                <img src="~/images/vs.png" class="img-responsive img-centered" alt="Visual Studio & TFS">
            </div>
            <div class="col-md-2">
                <img src="~/images/git.png" class="img-responsive img-centered" alt="Git">
            </div>
            <div class="col-md-2">
                <img src="~/images/nodejs.png" class="img-responsive img-centered" alt="NodeJs">
            </div>
            <div class="col-md-2">
                <img src="~/images/bootstrap.png" class="img-responsive img-centered" alt="Bootstrap">
            </div>
            <div class="col-md-2">
                <img src="~/images/handlebars.png" class="img-responsive img-centered" alt="Handlebars">
            </div>
        </div>
    </div>
</section>
